
@model BudjettI.Models.Menot

@{

    ViewBag.Title = "Edit";

}

<center>

    @using (Html.BeginForm())

    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h2>Tässä voit muokata kuukausittaisia menojasi</h2>

            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.MenotID)

            <div class="form-group">

                @Html.LabelFor(model => model.AsiakasID, "AsiakasID", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">

                    @Html.DropDownList("AsiakasID", null, htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.AsiakasID, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.MenolajitID, "MenolajitID", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">

                    @Html.DropDownList("MenolajitID", null, htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.MenolajitID, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.PVM, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">

                    @Html.EditorFor(model => model.PVM, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.PVM, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.Maara, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">

                    @Html.EditorFor(model => model.Maara, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.Maara, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">

                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Tallenna" class="btn btn-default" />

                </div>

            </div>

        </div>

    }

    <div>

        @Html.ActionLink("Palaa alkuun", "Index")

    </div>

    @section Scripts {

        @Scripts.Render("~/bundles/jqueryval")

    }

</center>